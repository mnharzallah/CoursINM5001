<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"  
    android:background="@drawable/taxi">
    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/textInsc"
    android:textStyle="bold"
    android:textColor="#D8D8D8"
    android:textSize="30sp"/>
<LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="140dp">
    <Button 
        android:id="@+id/inscr_chauffeur"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/inscr_chauffeur"
        android:padding="25sp"
        android:textAllCaps="false"
        android:layout_weight="1"
        android:textColor="#000000"
        android:textStyle="bold"
        android:shadowRadius="20"
        android:shadowColor="#000000"
        android:background="@drawable/rounded_button"/>
    <Button 
        android:id="@+id/inscr_client"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/inscr_client"
        android:padding="25sp"
        android:textAllCaps="false"
        android:layout_weight="1"
        android:textColor="#000000"
        android:textStyle="bold"
        android:shadowRadius="20"
        android:shadowColor="#000000"
        android:background="@drawable/rounded_button"/>
</LinearLayout>
<LinearLayout
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="110dp">
    <Button 
        android:id="@+id/retourMain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/retourMain"
        android:textColor="#D8D8D8"
        android:textAllCaps="false"
        android:layout_weight="1"
        android:layout_marginTop="78dp"
        android:background="@android:color/transparent"/>
    <TextView
    android:id="@+id/copyright"    
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textStyle="bold"
    android:textSize="10sp"
    android:text="@string/copyright"
    android:layout_marginLeft="240dp"
    android:layout_marginTop="100dp"
    android:textColor="#000000"
    android:layout_weight="1"/>
    </LinearLayout>
</LinearLayout>