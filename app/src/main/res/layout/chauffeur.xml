<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/taxi">
    <TextView
        android:id="@+id/bienvenue"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textColor="#D8D8D8"
        android:textSize="20sp"
        android:layout_marginTop="20dp"/>
    <fragment
        android:layout_marginTop="10dp"
        android:id="@+id/googleMap"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        class="com.google.android.gms.maps.SupportMapFragment"
        android:layout_above="@+id/latlongLocation" />
    <TextView
        android:id="@+id/latlongLocation"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:layout_alignParentBottom="true"
        android:background="#000000"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:textColor="#ffffffff"
        android:paddingLeft="5dp"
        android:paddingRight="5dp" />
    <TextView
        android:id="@+id/location"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textColor="#D8D8D8" />
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/accept"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Accepter"
            android:textSize="10sp"
            android:textColor="#000000"
            android:padding="10sp"
            android:textStyle="bold"
            android:shadowRadius="20"
            android:shadowColor="#000000"
            android:textAllCaps="false"
            android:layout_weight="1"
            android:background="@drawable/rounded_button"/>
        <Button
            android:id="@+id/refuse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Refuser"
            android:textAllCaps="false"
            android:textSize="10sp"
            android:padding="10sp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:shadowRadius="20"
            android:shadowColor="#000000"
            android:layout_weight="1"
            android:background="@drawable/rounded_button"/>
    </LinearLayout>
    <TextView
        android:id="@+id/note"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:textStyle="bold"
        android:layout_marginLeft="5dp"
        android:textColor="#D8D8D8" />
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="160dp">
    <Button
       android:id="@+id/deconnecter"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="@string/deconnecter"
       android:textColor="#D8D8D8"
       android:textAllCaps="false"
       android:textSize="13dp"
       android:textStyle="bold"
       android:background="@android:color/transparent"/>
    <TextView
        android:id="@+id/resultat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="10sp"
        android:shadowColor="#8A0808"
        android:layout_marginLeft="50dip"
        android:textColor="#D8D8D8"/>
    </LinearLayout>
    <TextView
        android:id="@+id/copyright"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="10sp"
        android:text="@string/copyright"
        android:layout_marginLeft="220dip"
        android:textColor="#000000"/>
</LinearLayout>